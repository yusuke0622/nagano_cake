<div class="container">
  <div class="row no-gutters">
    <div class="col-md-9 col-sm-10 mx-5 mx-sm-auto mt-5">
      <h2 class="mb-4">管理者ログイン</h2>
      
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="row form-group">
          <%= f.label :email, 'メールアドレス', class: 'col-md-3 col-sm-6' %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'sample@gmail.com', class: 'col-md-7 col-sm-4' %>
        </div>
      
        <div class="row form-group">
          <%= f.label :password, 'パスワード', class: 'col-md-3 col-sm-6' %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: 'col-md-7 col-sm-4' %>
        </div>
      
        <div class="row form-group">
          <%= f.submit "ログイン", class: 'btn btn-primary offset-md-3 col-md-2 col-sm-2' %>
        </div>
      <% end %>
      
      <%= render "admin/shared/links" %>
    </div>
  </div>
</div>