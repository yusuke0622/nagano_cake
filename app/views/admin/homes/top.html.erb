<div>
    <div>
        <div>
            <h2>注文履歴一覧</h2>
        </div>
        
        <div>
            <table class="table">
                <thead>
                    <tr>
                        <th>購入日時</th>
                        <th>購入者</th>
                        <th>注文個数</th>
                    </tr>
                </thead>
                <tbody>
                    <% @orders.each do |order| %>
                    <tr>
                        <td><%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
                        <td><%= (order.customer.first_name + order.customer.last_name) %></td>
                        <td><%= order.order_details.sum(:amount) %></td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>