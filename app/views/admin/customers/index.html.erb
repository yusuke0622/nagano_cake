<div class="container">
    <div class="row">
        <div class="col-md-10">
            <div class="row mt-4">
                <h2 class="offset-md-1">会員一覧</h2>
            </div>
        
        <div class="col-md-9 mx-auto mt-2">
            <table class="table">
                <thead class="bg-secondary text-light">
                    <tr>
                        <th>会員ID</th>
                        <th>氏名</th>
                        <th>メールアドレス</th>
                    </tr>
                </thead>
                <tbody>
                    <% @customers.each do |customer| %>
                    <tr>
                        <td><%= customer.id %></td>
                        <td>
                            <%= link_to admin_customer_path(customer.id), class: "text-dark border-bottom border-dark" do %>
                                <%= (customer.first_name+customer.last_name) %>
                            <% end %>
                        </td>
                        <td><%= customer.email %></td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
            
            <%= paginate @customers %>
        </div>
    </div>
</div>