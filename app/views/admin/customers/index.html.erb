<h2>会員一覧</h2>

<table class="table">
    <theder>
        <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
        </tr>
    </theder>
    <tbody>
        <% @customers.each do |customer| %>
        <tr>
            <td><%= customer.id %></td>
            <td><%= (customer.first_name+customer.last_name) %></td>
            <td><%= customer.email %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<%= paginate @customers %>