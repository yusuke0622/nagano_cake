<div class="container">
    <div class="row">
      <div class="col-md-7 mx-auto">
        <div class="col-md-9">
            <div class="row">
                <h2 class="offset-md-1">会員一覧</h2>
            </div>
        </div>
            <table class="table">
                <thead class="bg-secondary text-light">
                    <tr>
                        <th>会員ID</th>
                        <th>氏名</th>
                        <th>メールアドレス</th>
                        <th>ステータス</th>
                    </tr>
                </thead>
                <tbody>
                    <% @customers.each do |customer| %>
                    <tr>
                        <td><%= customer.id %></td>
                        <td>
                            <%= link_to admin_customer_path(customer.id), class: "text-dark border-bottom border-dark" do %>
                                <%= (customer.first_name+customer.last_name) %>
                            <% end %>
                        </td>
                        <td><%= customer.email %></td>
                        <td>
                            <% if customer.is_deleted == false %>
                            <span class="text-success">有効</span>
                            <% else %>
                            <span class="text-secondary">退会</span>
                            <% end %>
                        </td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
            <div class="d-flex justify-content-center mt-5">
                <%= paginate @customers %>
            </div>
      </div>
    </div>
</div>