<h2>会員一覧</h2>

<table class="table">
    <theder>
        <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
        </tr>
    </theder>
    <tbody>
        <% @customers.each do |customer| %>
        <tr>
            <td><%= customer.id %></td>
            <td>
                <%= link_to admin_customer_path(customer.id) do %>
                    <%= (customer.first_name+customer.last_name) %>
                <% end %>
            </td>
            <td><%= customer.email %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<%= paginate @customers %>