<h2>商品一覧</h2>


    <table class="table">
        <thead>
            <tr>
                <th>商品ID</th>
                <th>商品名</th>
                <th>税抜価格</th>
            </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
                <td><%= item.id %></td>
                <td>
                    <%= link_to admin_item_path(item.id) do %>
                    <%= item.name %>
                    <% end %>
                </td>
                <td><%= item.price.to_s(:delimited) %></td>
            </tr>
          <% end %>
        </tbody>
     
    </table>

<%= paginate @items %>