<div>
    <div>
        <div>
            <h2>注文履歴詳細</h2>
        </div>
        
        <div>
            <p>
                <strong>購入者</strong>
                <%= link_to admin_customer_path do %>
                <%= (@order.customer.first_name + @order.customer.last_name) %>
                <% end %>
            </p>
                <strong>注文日</strong>
                <%= @order.created_at.strftime('%Y/%m/%d') %></td>
            </p>
            <p>
                <strong>配送先</strong>
                〒<%= @order.postal_code %>
                <%= @order.destination %><br>
                <%= @order.address_name %>
            </p>
            <p>
                <strong>支払方法</strong>
                <%= @order.payment_method_i18n %>
            </p>
            
        </div>
        
        <div>
            <table class="table">
                <thead>
                    <th>商品名</th>
                    <th>単価（税込）</th>
                    <th>数量</th>
                    <th>小計</th>
                </thead>
                <tbody>
                    <% @order_details.each do |order_detail| %>
                    <tr>
                        <td>
                            <%= order_detail.item.name %>
                        </td>
                        <td>
                            <%= order_detail.price.to_s(:delimited) %>
                        </td>
                        <td>
                            <%= order_detail.amount %>
                        </td>
                        <td>
                            <%= (order_detail.price * order_detail.amount).to_s(:delimited) %>
                        </td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>