<div class="container">
        <div class="mt-4">
            <h2>注文情報確認</h2>
        </div>
        <div class="row mb-4">
            <div class="col-md-8">
                <table class="table table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th>商品名</th>
                            <th>単価(税込)</th>
                            <th>数量</th>
                            <th>小計</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @cart_items.each do |cart_item| %>
                        <tr>
                            <td>
                                <%= image_tag cart_item.item.get_image(70,40) %>
                                <%= cart_item.item.name %>
                            </td>
                            <td>
                                <%= cart_item.item.add_tax_price.to_s(:delimited) %>
                            </td>
                            <td>
                                <%= cart_item.amount %>
                            </td>
                            <td>
                                <%= cart_item.subtotal.to_s(:delimited) %>
                            </td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
            <div class="col-md-3">
                <%= form_with model: @order, url: orders_path do |f| %>
                <table class="table table-bordered ">
                    <tbody>
                        <tr>
                            <th class="table-dark">送料</th>
                            <td><%= @order.postage %></td>
                            <%= f.hidden_field :postage, :value => @order.postage %>
                        </tr>
                        <tr>
                            <th class="table-dark">商品合計</th>
                            <td><%= @total_price.to_s(:delimited) %></td>
                        </tr>
                        <tr>
                            <th class="table-dark">請求金額</th>
                            <td><%= (@order.postage + @total_price).to_s(:delimited) %></td>
                            <%= f.hidden_field :amount_billed, :value => (@total_price + @order.postage) %>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
       
        <div class="row mb-4">
            <h3><strong>支払方法</strong></h3>
            <h4 class="ml-4"><%= @order.payment_method_i18n %></h4>
            <%= f.hidden_field :payment_method, :value => @order.payment_method %>
            <br>
        </div>
        <div class="row">
            <h3><strong>お届け先</strong></h3>
            <h4 class="ml-4">
                〒<%= @order.postal_code %>
                <%= f.hidden_field :postal_code, :value => @order.postal_code %>
                <%= @order.destination %>
                <%= f.hidden_field :destination, :value => @order.destination %>
                <br>
                <%= @order.address_name %>
                <%= f.hidden_field :address_name, :value => @order.address_name %>
            </h4>
        </div>
        <div class="text-center">
            <%= f.submit '注文を確定する', class: 'btn btn-success btn-lg px-4 mt-3' %>
        </div>
        <% end %>
</div>