<% if @cart_item.errors.any? %>
    <%= @cart_item.errors.full_messages %>
<% end %>

<div class="container">
    <div class="row mx-auto mt-5">
            <div class="col-md-5">
                <%= image_tag @item.get_image(300,260) %>
            </div>
            <div class="col-md-5">
                <h3><strong><%= @item.name %></strong></h3><br>
                <p><%= @item.introduction %></p><br>
                <h4>¥<%= @item.add_tax_price.to_s(:delimited) %><span>(税込)</span></h4><br>
            
            <% if customer_signed_in? %>
                <%= form_with model: @cart_item, url: cart_items_path do |f| %>
                    
                    <%= f.hidden_field :item_id, :value => @item.id %>
                    <%= f.select :amount, *[1..10], {:prompt => "個数選択"}, checked: 'blue' %>
                    <%= f.submit 'カートに入れる', class: 'btn btn-success' %>
                        </div>
                   
                <% end %>
            <% end %>
            </div>
        
    </div>
</div>