<% if @cart_item.errors.any? %>
    <%= @cart_item.errors.full_messages %>
<% end %>

<div>
    <div>
        <div>
            <%= image_tag @item.get_image(220,160) %>
        </div>
        <div>
            <h3><%= @item.name %></h3>
            <p><%= @item.introduction %></p>
            <h4>¥<%= @item.add_tax_price.to_s(:delimited) %><span>(税込)</span></h4>
        </div>
        <% if customer_signed_in? %>
            <%= form_with model: @cart_item, url: cart_items_path do |f| %>
                <%= f.hidden_field :item_id, :value => @item.id %>
                <%= f.select :amount, *[1..10], {:prompt => "個数選択"}, checked: 'blue' %>
                <%= f.submit 'カートに入れる', class: 'btn btn-success' %>
            <% end %>
        <% end %>
    </div>
</div>